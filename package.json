{
  "name": "code-editor-react",
  "version": "1.0.0",
  "description":
    "Create an online code editor using React, Node.js, Express and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "build":
      "API_HOST=https://online-code-editor-api.herokuapp.com webpack --env production ",
    "client":
      "PORT=3000 webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Johnny",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootstrap-select": "^1.13.1",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "mini-css-extract-plugin": "^0.4.0",
    "mkdirp": "^0.5.1",
    "prop-types": "^15.6.1",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "react": "^16.3.1",
    "react-ace": "^6.1.1",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.3.1",
    "react-router-dom": "^4.2.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.3",
    "style-loader": "^0.20.3",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  }
}
