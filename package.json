{
  "name": "code-editor-react",
  "version": "1.0.0",
  "description": "Create an online code editor using React, Node.js, Express and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "heroku-server": "node src/server/index.js",
    "heroku-client": "node server.js",
    "start": "node src/server/index.js",
    "build": "webpack --env production",
    "lint": "eslint src/**/*.js",
    "client": "NODE_ENV=development PORT=3000 webpack serve --env development --devtool inline-source-map --hot",
    "client-prod": "NODE_ENV=production PORT=3001 webpack serve",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "concurrently \"npm run server\" \"npm run client-prod\"",
    "start-prod": "PORT=9010 node src/server/index.js"
  },
  "author": {
    "name": "Rong Zhuang",
    "email": "jojozhuang@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.1",
    "bootstrap-select": "^1.13.10",
    "express": "^4.17.3",
    "file-loader": "^1.1.11",
    "mem": "^8.1.1",
    "mkdirp": "^0.5.1",
    "prop-types": "^15.8.0",
    "react": "^16.8.6",
    "react-ace": "^6.6.0",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.8.6",
    "react-router-dom": "^4.3.1",
    "url-loader": "^1.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.6.1",
    "copy-webpack-plugin": "^9.1.0",
    "css-loader": "^2.1.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "fstream": "1.0.12",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^5.5.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^0.4.5",
    "nodemon": "^2.0.15",
    "purgecss-webpack-plugin": "^4.1.3",
    "style-loader": "^0.20.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1",
    "webpack-merge": "^4.2.1",
    "yargs-parser": "^20.2.9"
  },
  "engines": {
    "node": "14.16.1",
    "npm": "6.14.12"
  }
}
