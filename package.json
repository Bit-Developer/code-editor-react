{
  "name": "code-editor-react",
  "version": "1.0.0",
  "description": "Create an online code editor using React, Node.js, Express and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "build": "webpack --env production",
    "postinstall": "npm run build",
    "client": "PORT=3000 webpack-dev-server --env development --devtool inline-source-map --hot",
    "client-prod": "PORT=3001 webpack-dev-server",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "concurrently \"npm run server\" \"npm run client-prod\""
  },
  "author": {
    "name": "Rong Zhuang",
    "email": "jojozhuang@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap-select": "^1.13.10",
    "express": "^4.17.1",
    "file-loader": "^1.1.11",
    "mini-css-extract-plugin": "^0.4.5",
    "mkdirp": "^0.5.1",
    "prop-types": "^15.7.2",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "react": "^16.8.6",
    "react-ace": "^6.6.0",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.8.6",
    "react-router-dom": "^4.3.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.33.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.6.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "fstream": "1.0.12",
    "glob": "^7.1.4",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.15",
    "nodemon": "^1.19.1",
    "style-loader": "^0.20.3",
    "webpack-cli": "^3.3.3",
