{
  "name": "code-editor-react",
  "version": "1.0.0",
  "description": "Create an online code editor using React, Node.js, Express and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "heroku-server": "node src/server/index.js",
    "heroku-client": "node server.js",
    "start": "node src/server/index.js",
    "build": "webpack --env production",
    "lint": "eslint src/**/*.js",
    "client": "NODE_ENV=development PORT=3000 webpack serve --env development --devtool inline-source-map --hot",
    "client-prod": "NODE_ENV=production PORT=3001 webpack serve",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "concurrently \"npm run server\" \"npm run client-prod\"",
    "start-prod": "PORT=9010 node src/server/index.js"
  },
  "author": {
    "name": "Rong Zhuang",
    "email": "jojozhuang@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.20.1",
    "bootstrap-select": "1.13.10",
    "express": "4.18.2",
    "file-loader": "6.2.0",
    "mkdirp": "0.5.6",
    "prop-types": "15.8.1",
    "react": "16.14.0",
    "react-ace": "10.1.0",
    "react-bootstrap": "0.33.1",
    "react-dom": "16.14.0",
    "react-router-dom": "4.3.1",
    "url-loader": "4.1.1"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/node": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "babel-loader": "9.1.2",
    "clean-webpack-plugin": "1.0.1",
    "concurrently": "7.6.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.3",
    "eslint": "8.32.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.1",
    "glob": "7.2.0",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.7.2",
    "nodemon": "2.0.20",
    "purgecss-webpack-plugin": "4.1.3",
    "style-loader": "3.3.1",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "4.2.2",
    "yargs-parser": "20.2.9"
  },
  "engines": {
    "node": "16.13.1",
    "npm": "8.1.2"
  }
}
